<aura:component description="A18_AssetTrackerHeader" controller="A18_AC_AssetController" extends="forceCommunity:navigationMenuBase">
    <aura:attribute name="userType" type="String" />
    <aura:attribute name="user" type="User" default="{
        'Name': '',
        'Id': '',
        'Email': '' }"/>

    <aura:handler name="init" value="{!this}" action="{!c.init}" />

    <div class="slds-grid slds-gutters">
        <div class="slds-col">
            <img src="{!$Resource.logo}" />
        </div>

        <div class="slds-col">
            <h1 class="slds-text-heading--medium"><a href="../s/assets">Assets</a></h1>
        </div>

        <div class="slds-col">
            <h1 class="slds-text-heading--medium">Assets To Users</h1>
        </div>

        <div class="slds-col">
            <h1 class="slds-text-heading--medium">Requests</h1>
        </div>

        <div class="slds-col">
            <h1 class="slds-text-heading--medium">Options</h1>
        </div>

        <div class="slds-col">
            <c:A18_AssetTrackerUserInfo user="{!v.user}" userType="{!v.userType}"/>
        </div>
    </div>
</aura:component>
