<aura:component description="A18_AssetTrackerAssetListItem" controller="A18_AC_AssetController">
    <aura:attribute name="assetJSON" type="String"/>
    <aura:attribute name="asset" type="Object"/>

    <aura:handler name="init" value="{!this}" action="{!c.init}"/>

    <tr>
        <th scope="row" data-label="Name">
            <div class="slds-truncate"><a href="{!'https://pkucia-developer-edition.eu10.force.com/AssetTrackerCommunity/s/detail/' + v.asset.id}" target="_blank">{!v.asset.name}</a></div>
        </th>
        <td data-label="Price">
            <div class="slds-truncate">{!v.asset.price}</div>
        </td>
        <td data-label="Purchase Date">
            <div class="slds-truncate">{!v.asset.purchaseDate}</div>
        </td>
        <td data-label="Due Date">
            <div class="slds-truncate">{!v.asset.dueDate}</div>
        </td>
        <td data-label="Invoice Number">
            <div class="slds-truncate">{!v.asset.invoiceNumber}</div>
        </td>
        <td data-label="Description">
            <div class="slds-truncate">{!v.asset.description}</div>
        </td>
        <td data-label="Is Broken?">
            <div class="slds-truncate">{!v.asset.isBroken == true ? 'YES' : 'NO'}</div>
        </td>
        <td data-label="Action">
            <div class="slds-button-group" role="group">
                <button class="slds-button slds-button_neutral" onclick="{!c.getQR}">Get QR</button>
                <button class="slds-button slds-button_neutral" onclick="{!c.editAsset}">Edit</button>
                <button class="slds-button slds-button_neutral" onclick="{!c.deleteAsset}">Delete</button>
            </div>
        </td>
    </tr>

</aura:component>
